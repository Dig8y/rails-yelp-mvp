<nav class="navbar navbar-light bg-light p-2">
  <%= link_to 'restaurants', restaurants_path %>
  <%= link_to 'add restaurant', restaurants_new_path, class: "btn btn-primary" %>
</nav>

<h1>Create new restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
<%= f.input :name %>
<%= f.input :address %>
<%= f.input :phone_number %>
<%= f.input :category, :collection => ["chinese", "italian", "japanese", "french", "belgian"] %>
<%= f.submit 'Create restaurant', class: "btn btn-primary"%>
<% end %>
